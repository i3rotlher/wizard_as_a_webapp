# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /                           controllers.WizardController.index()

GET     /hi                 controllers.WizardController.getHi()

# POST ROUTES

POST    /playerCount        controllers.WizardController.setPlayerCount(count: Int)
GET     /playerCount        controllers.WizardController.getPlayerCountView()

POST    /playerName         controllers.WizardController.setName(name: String)
GET     /playerName         controllers.WizardController.setNameView()

POST    /trump              controllers.WizardController.setTrump(color: String)
GET     /trump              controllers.WizardController.getTrump()

POST    /setTrickAmount     controllers.WizardController.setTrickAmount(amount: Int)
GET     /setTrickAmount     controllers.WizardController.getTrickAmount()

POST    /playCard           controllers.WizardController.playCard(idx: Int)
GET     /playCard           controllers.WizardController.playCardView()

GET     /wizard             controllers.WizardController.wizard()

GET     /howToPlay          controllers.WizardController.howTo()

GET     /trickOver           controllers.WizardController.trickOver()

GET     /roundOver          controllers.WizardController.roundOver()