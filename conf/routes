# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /hi/:name                        controllers.HomeController.hi(name: String)



# POST ROUTES

POST    /playerCount?count=X        controllers.WiazardController.setPlayerCount(count: Int)

POST    /playerName?name=X          controllers.WiazardController.setName(name: String)

POST    /trump?color=X              controllers.WiazardController.setTrump(color: String)

POST    /setTrickAmount?amount=X    controllers.WiazardController.setTrickAmount(amount: Int)

POST    /playCard=?idx=X            controllers.WiazardController.playCard(idx: Int)
